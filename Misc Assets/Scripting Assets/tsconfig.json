{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "ScriptLib/3rdparty/*",
                "ScriptLib/*",
                "Addons/*",
                "*"
            ]
        },
        "skipLibCheck": true,
        "removeComments": true,
        "jsx": "react",
        "jsxFactory": "h",
        "target": "es6",
        "module": "commonjs",
        "noImplicitUseStrict": true,
        "lib": [
            "ES6"
        ]
    }
}